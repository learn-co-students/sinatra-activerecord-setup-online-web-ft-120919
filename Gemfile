# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'thin'
gem 'require_all'
gem 'activerecord', '5.2' #added for activerecord
gem 'sinatra-activerecord'	#added for activerecord
gem 'rake'	#added for activerecord


group :development do
	gem 'shotgun'
	gem 'pry'
	gem 'tux' #database adapter gem - it's what allows our Ruby application to communicate with a SQL database.
    gem 'sqlite3', '~> 1.3.6' #database adapter gem - it's what allows our Ruby application to communicate with a SQL database.
end